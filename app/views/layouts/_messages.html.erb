<% flash.each do |key, value| %>
  <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true" style="position: absolute;z-index: 1000;right: 0;">
    <div class="toast-header">
      <%= image_tag 'icon.png', height: '30', width: '30', :class=>"rounded mr-2" %>
      <strong class="mr-auto">Уведомление</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      <%= value %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
    $(document).ready(function(){
        setTimeout(function(){
            $('.toast').fadeOut();
        }, 3000);
    })
</script>