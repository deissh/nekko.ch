<article class="full">
  <%= hidden_field_tag 'page_id', @anime.id %>
  <header class="full_header">
    <div class="full_header-bg" id="full_header-bg">
      <div class="full_header__bg-img" style="background-image: url(<%= @anime["posters"][0] %>);"></div>
    </div>
    <div class="full_header-inner">
      <div class="full_header-title" id="full_header-title">
        <div class="full_content-poster img_box">
          <img itemprop="image" class="b-lazy" src="<%= @anime["posters"][0] %>" data-src="<%= @anime["posters"][0] %>" alt="{title}">
        </div>
        <h1>
          <%= @anime["title"] %>
        </h1>
        <div class="full_header-subtitle" itemprop="alternateName">
          <%= @anime["title_en"] %>
        </div>
      </div>
      <div class="full_header-actions">
        <a href="#translators" class="scrolla ic-l to_view  action-header__btn button">
          <svg class="svg-inline--fa fa-play fa-w-14" aria-hidden="true" data-prefix="fas" data-icon="play" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" data-fa-i2svg="">
            <path fill="currentColor" d="M424.4 214.7L72.4 6.6C43.8-10.3 0 6.1 0 47.9V464c0 37.5 40.7 60.1 72.4 41.3l352-208c31.4-18.5 31.5-64.1 0-82.6z"></path>
          </svg>
          <span class="fas fa-play"></span> Смотреть онлайн!
        </a>
        <!--        <a href="#" class="scrolla ic-l to_trailer action-header__btn button" data-target="trailer" title="{title}">-->
        <!--           <span class="fab fa-youtube"></span>Трейлер-->
        <!--        </a>-->
      </div>
    </div>
  </header>
  <div class="full-desc">
    <div class="full-text clearfix video-box">
      <div class="full-poster ignore-select" id="full-poster">
        <div class="f-poster">
          <a href="<%= @anime["posters"][0] %>" onclick="return hs.expand(this)">
            <%= image_tag @anime["posters"][0] %>
          </a>
        </div>
      </div>
      <div class="full-info clearfix ignore-select">
        <div class="fi-col">
          <div class="fi-col-item"><span>Год выхода:</span> <%= @anime["year"] %></div>
          <div class="fi-col-item"><span>Статус:</span> <%= @anime["status"] %></div>
          <div class="fi-col-item"><span>Тип:</span> <%= @anime["type"] %></div>
          <div class="fi-col-item"><span>Жанры:</span> <%= @anime["genres"].join(', ') %></div>
          <div class="fi-col-item"><span>Страны:</span> <%= @anime["countries"].join(', ') %></div>
          <div class="fi-col-item"><span>Режиссер:</span> <%= @anime["directors"][0] %></div>
          <div class="fi-col-item"><span>Студия:</span> <%= @anime["studios"][0] %></div>
        </div>
        <div class="full-infos"><%= @anime["description"] %></div>
      </div>
    </div>
    <div class="full-taglist ignore-select">
      <div class="full-taglist-t">Теги:</div>
      <%= @anime["genres"].join(', ') %>
    </div>
  </div>

  <div class="accordion" id="translators">
    <% (1..5).each do |tr| %>
      <div class="card">
        <div class="card-header translator-header" id="translator-title-<%= tr %>">
          <h5 class="mb-0">
            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#translator-btn-<%= tr %>" aria-expanded="false" aria-controls="translator-btn-<%= tr %>">
              <%= tr %>
            </button>
          </h5>
        </div>

        <div id="translator-btn-<%= tr %>" class="collapse translator-body" aria-labelledby="translator-title-<%= tr %>" data-parent="#translators">
          <div class="card-body">

            <div class="episodes">
              <% (1..50).each_with_index do |episode, index| %>
                <%= content_tag(:div, index + 1, 'data-id': index, 'data-href': "http://moonwalk.cc/serial/05637d0c8b3e7e2f23caaa4ab6ce0ee2/iframe?season=01&episode=02&nocontrols=1", class: "video-button") %>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="tabs-box ignore-select">
    <div class="embed-responsive embed-responsive-16by9" id="player">
      <iframe src="" class="embed-responsive-item" allowfullscreen></iframe>
    </div>
  </div>
</article>
