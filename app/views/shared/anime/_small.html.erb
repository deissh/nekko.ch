<div class="ser">
  <%= link_to anime.title, anime_path(anime.try(:slug) || anime.id), class: "ser-t nowrap" %>
  <div class="ser-s">
    <%= anime.genres_list.first(3).join(', ') %>
  </div>
  <div class="ser-d">
    Рейтинг <%= anime.rating.to_f.round(1) %> из 10
  </div>
  <% if anime.updated_at.today? %>
    <div class="ser-d">
      <%= l(anime.updated_at, format: '%A %H:%M') %>
    </div>
  <% end %>
  <a class="ser-i img-box ps-link" href="<%= anime_path(anime.try(:slug) || anime.id) %>">
    <span class="topicImage" style="background-image: url(<%= url_for(anime.poster_attachment_path) %>);"></span>
    <span class="fa fa-play-circle"></span>
  </a>
</div>