<header class="head-sticky">
  <div class="container">
    <div class="head-in center" id="head-in">
      <a href="/" class="logotype" title="На главную">Nekko - Не только читай но и смотри!</a>
      <ul class="head-menu clearfix" id="head-menu">
        <li><a href="/">Главная</a></li>
        <li><a href="#">Новости</a></li>
        <li>
          <a href="#">Поиск</a>
          <ul class="hidden-menu">
            <li>
              <%= link_to 'Аниме', anime_index_path %>
            </li>
            <li><a href="#">Манга</a></li>
          </ul>
        </li>
        <li>
          <a href="#">Помощь</a>
          <ul class="hidden-menu">
            <li>
              <a href="https://vk.com/nekko4">Обратная связь</a>
            </li>
            <li>
              <%= link_to 'Правообладателям', page_copyright_path %>
            </li>
            <li>
              <%= link_to 'Правила', page_rules_path %>
            </li>
            <li>
              <%= link_to 'О сайте', page_about_path %>
            </li>
            <li>
              <%= link_to 'Политика конфиденциальности', page_privacy_path %>
            </li>
          </ul>
        </li>

        <li class="head-ic">
          <a href="#" style="width: 80px;">
            <% if (user_signed_in?) %>
              <div class="loginbtn img-box align-middle" id="loginbtn">
                <%= image_tag current_user.avatar_path %>
              </div>
            <% else %>
              <span class="fa fa-user"></span>
            <% end %>
          </a>
          <ul class="hidden-menu login-box">
            <% if (user_signed_in?) %>
              <li>
                <div class="login-avatar">
                  <div class="avatar-box" id="avatar-box">
                    <%= image_tag current_user.avatar_path %>
                  </div>
                  <% if current_admin %>
                    <a href="/admin/panel" target="_blank">Админпанель</a>
                  <% end %>
                </div>
                <ul class="login-menu">
                  <li><%= link_to "Мой профиль", user_path(current_user.slug || current_user.id) %></li>
                  <li><a href="#">Сообщения</a></li>
                  <li><a href="#">Мои закладки</a></li>
                  <li><a href="#">Последние комментарии</a></li>
                  <li><%= link_to "Выйти", destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
            <% else %>
              <li>
                <div class="login-avatar">
                  <% if current_admin %>
                    <a href="/admin/panel" target="_blank">Админпанель</a>
                  <% end %>
                </div>
                <ul class="login-menu">
                  <li><%= link_to "Регистрация", new_user_registration_path %></li>
                  <li><%= link_to "Войти", new_user_session_path %></li>
                </ul>
              </li>
            <% end %>
          </ul>
        </li>
        <li class="head-ic">
          <a href="#"><span class="fa fa-search"></span></a>
          <ul class="hidden-menu search-box">
            <li>
              <div>
                <form method="get" action="<%= anime_index_path %>">
                  <div class="search-inner">
                    <input id="story" name="q" placeholder="Поиск..." type="text" />
                    <button type="submit" title="Найти">поиск</button>
                  </div>
                </form>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</header>