<div id="edit">

  <div class="row">

    <div class="col-3">123</div>
    <div class="col-9">

      <h2>Редактирование пользователя</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :avatar %>
            <%= f.file_field :avatar, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :background %>
            <%= f.file_field :background, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :about %>
            <%= f.text_area :about, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :gender %>
            <%= f.text_field :gender, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :language %>
            <%= f.text_field :language, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :birthday %>
            <%= f.date_select :birthday, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :waifu_or_husbando %>
            <%= f.text_field :waifu_or_husbando, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <%#= f.submit "Update" %>
            <button class="btn btn-primary">Сохранить</button>
          </div>
      <% end %>

      <h3>Удалить аккаунт</h3>

      <%= button_to "Удалить", registration_path(resource_name), data: { confirm: "Точно?" }, method: :delete, class: "btn btn-danger" %>

    </div>

  </div>

</div>
